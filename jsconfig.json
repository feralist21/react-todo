{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "checkJs": false,
        "experimentalDecorators": false,
        "allowSyntheticDefaultImports": false,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./src/components/*"],
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
